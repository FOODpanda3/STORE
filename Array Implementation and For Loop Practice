public class ArrayImplementationAndForLoopPractice {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
    }

    public static void sumandaverage() {
         int count = 15;
        double number, sum = 0;
        double average = 0;
        double [] numbers= new double [count];
        for (int i = 0; i < count; i++) {
            String input = JOptionPane.showInputDialog("Enter number " + (i + 1) + ":");
            numbers[i] = Double.parseDouble(input);
                    sum += numbers[i];
                   average = sum / count; 
    }
    String result = String.format("Sum of Numbers: %.2f\nAverage of Numbers: %.2f", sum, average);
     JOptionPane.showMessageDialog(null, result);
}
    public static void MaxandMinElemFinder(){
    int count = 15;
        int[] numbers = new int[count]; 
        for (int i = 0; i < count; i++) {
            String valueInput = JOptionPane.showInputDialog("Enter a number-"+ (i + 1) +":");
            numbers[i] = Integer.parseInt(valueInput);
        }
        int max = numbers[0];
        int min = numbers[0];
        for (int num:numbers){
        if (num>max)    {
        max = num;
        }
        if (num<min){
        min = num;
        }
        }
        String result = String.format("Maximum: %d\nMinimum: %d", max, min);
        JOptionPane.showMessageDialog(null, result);
    }
    public static void ReverseanArray(String[]args){
    int count= 5;
    double [] numbers  = new double [count];
    for (int i = 0; i < count; i++ ){
     String valueInput = JOptionPane.showInputDialog("Enter number " + (i + 1) + ":");
     numbers[i] =  Double.parseDouble(valueInput);
    }
     StringBuilder reversedResult = new StringBuilder("Reversed Array: ");
        for (int i = count - 1; i >= 0; i--) {
            reversedResult.append(numbers[i]);
            if (i > 0) {
                reversedResult.append(", ");
            }
    }
        JOptionPane.showMessageDialog(null, reversedResult.toString());


}   }





