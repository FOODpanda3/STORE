package circle;

import javax.swing.JOptionPane;

/**
 *
 * @author VILLACORTA_COMP111
 */
public class Circle {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Circle1 james=new Circle1();
          String input = JOptionPane.showInputDialog(null, "Enter the radius of the circle:");
        JOptionPane.showMessageDialog(null,"Circumference:"+ james.Compute_Circumference(5)+"\nArea:"+james.Compute_Area(7)+"\nDiameter:"+ james.Compute_diameter(10)+"\narc:"+ james.Compute_Arc(2, 10));
    }
    
}
